<div class="row h-100">
    <div class="col-lg-5 col-12">
        <div id="auth-left">
            <div class="auth-logo">
                <a href="index.html"><img src="/assets/images/logo/logo.png" alt="Logo"></a>
            </div>
            <h1 class="auth-title">Conecte-se.</h1>
            <p class="auth-subtitle mb-5">Entre com seu usuário e senha para se conectar.</p>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group position-relative has-icon-left mb-4">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-xl", placeholder: "e-mail" %>
                    <div class="form-control-icon">
                        <i class="bi bi-person"></i>
                    </div>
                </div>
                <div class="form-group position-relative has-icon-left mb-4">
                    <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-xl", placeholder: "Password" %>
                    <div class="form-control-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                </div>
                <div class="form-check form-check-lg d-flex align-items-end">
                    <%= f.check_box :remember_me, class: "form-check-input me-2", id: "flexCheckDefault" %>
                    <%= f.label :remember_me, 'Lembre-me',  class:"form-check-label text-gray-600"%>
                </div>
                <%= f.submit "Conectar", data: { turbo: false }, class: "btn btn-primary btn-block btn-lg shadow-lg mt-5" %>
            
                <div class="text-center mt-5 text-lg fs-4">
                    <p class="text-gray-600">Não tem uma conta? <a href="/users/sign_up" class="font-bold">Registre-se</a>.</p>
                    <% if devise_mapping.rememberable? %>
                    <p><a class="font-bold" href="/users/password/new">Esqueceu a senha?</a>.</p>
                    <% end %>
                </div>
            <% end%>

        </div>
    </div>
    
    <div class="col-lg-7 d-none d-lg-block">
        <div id="auth-right">

        </div>
    </div>
</div>
