<div class="row h-100">
    <div class="col-lg-5 col-12">
        <div id="auth-left">
            <div class="auth-logo">
                <a href="index.html"><img src="/assets/images/logo/logo.png" alt="Logo"></a>
            </div>
            <h1 class="auth-title">Edite</h1>
            <p class="auth-subtitle mb-5">Aqui você pode alterar o cadastro do seu usuário.</p>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
            
                <div class="form-group position-relative has-icon-left mb-4">
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",  class: "form-control form-control-xl"%>
                    <div class="form-control-icon">
                        <i class="bi bi-envelope"></i>
                    </div>
                </div>
                <div class="form-group position-relative has-icon-left mb-4">
                    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "Nome",  class: "form-control form-control-xl"%>
                    <div class="form-control-icon">
                        <i class="bi bi-people"></i>
                    </div>
                </div>
             
                <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <div>Atualmente aguardando confirmação para: <%= resource.unconfirmed_email %></div>
                <% end %>
                
                <div class="form-group position-relative has-icon-left mb-4">
                    <%= f.password_field :password, autocomplete: "new-password", placeholder:"Senha Nova(branco não altera)",  class:"form-control form-control-xl" %>
                    <div class="form-control-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                </div>
                    <% if @minimum_password_length %>
                        <em>Informe no mínimo <%= @minimum_password_length %> caracteres<br/><br/></em>
                    <% end %>

                <div class="form-group position-relative has-icon-left mb-4">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-xl", placeholder: "Confirma a senha" %>
                    <div class="form-control-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                </div>
                <div class="form-group position-relative has-icon-left mb-4">
                    <%= f.password_field :current_password, autocomplete: "current-password", placeholder:"Senha Atual",  class:"form-control form-control-xl" %>
                    <div class="form-control-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                </div>

                <%= f.submit "Alterar", data: { turbo: false },  class:"btn btn-primary btn-block btn-lg shadow-lg mt-5" %>
                </div>
            <% end %>
            <div class="text-center mt-5 text-lg fs-4">
                <p class='text-gray-600'>Infeliz? <%= button_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete, class: "btn btn-danger" %></p>

            </div>
        </div>
    </div>
</div>



